@page "/entry/new"
@page "/entry/edit/{EntryId:int}"
@using MoodAtlas.Services
@using MoodAtlas.Models
@inject EntryService EntryService
@inject UserService UserService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<div class="min-vh-100" style="background-color: @(isDarkMode ? "#1a1a1a" : "#f5f5f5")">
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="container-fluid">
            <span class="navbar-brand fw-bold">MoodAtlas</span>
            <div class="ms-auto d-flex align-items-center gap-3">
                <span class="text-white">Welcome, <strong>@currentUser?.Username</strong></span>
                <button class="btn btn-outline-light btn-sm" @onclick="GoBack">Back</button>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="card border-0 shadow">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-0">@(isEditMode ? "Edit Entry" : "Today's Entry")</h4>
                    <small>@selectedDate.ToString("dddd, MMMM dd, yyyy")</small>
                </div>
                <div class="d-flex gap-2 align-items-center">
                    <button class="btn btn-outline-light btn-sm" @onclick="PreviousDay">‚Üê</button>
                    <input type="date" class="form-control form-control-sm" style="width: 150px;" 
                           @bind="selectedDate" />
                    <button class="btn btn-outline-light btn-sm" @onclick="NextDay">‚Üí</button>
                    <button class="btn btn-outline-light btn-sm" @onclick="ToggleTheme" style="border: none; background: none;">
                        @if (isDarkMode)
                        {
                            <span style="font-size: 1.2rem;">‚òÄÔ∏è</span>
                        }
                        else
                        {
                            <span style="font-size: 1.2rem;">üåô</span>
                        }
                    </button>
                </div>
            </div>

            <div class="card-body">
                @if (successMessage != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @successMessage
                        <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
                    </div>
                }

                @if (errorMessage != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @errorMessage
                        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                    </div>
                }

                <form @onsubmit="SaveEntry">
                    <div class="row mb-4">
                        <div class="col-12">
                            <label class="form-label fw-bold">Title</label>
                            <input type="text" 
                                   class="form-control form-control-lg" 
                                   @bind="entry.Title" 
                                   placeholder="Entry Title"
                                   required />
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Content</label>
                        <textarea class="form-control" 
                                  rows="12" 
                                  @bind="entry.Content" 
                                  placeholder="Start writing your entry..."
                                  required
                                  style="resize: vertical;"></textarea>
                        <small class="text-muted">Word count: @wordCount</small>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Category ID (Optional)</label>
                            <input type="number" 
                                   class="form-control" 
                                   @bind="entry.CategoryId" 
                                   placeholder="Enter category ID (optional)" />
                        </div>
                    </div>

                    <hr />

                    <div class="d-flex gap-2 justify-content-end">
                        @if (isEditMode && entry.EntryId > 0)
                        {
                            <button type="button" class="btn btn-danger" @onclick="DeleteEntry">
                                <span class="bi bi-trash"></span> Delete
                            </button>
                        }
                        <button type="button" class="btn btn-light" @onclick="ResetForm">
                            <span class="bi bi-arrow-clockwise"></span> Clear
                        </button>
                        <button type="submit" class="btn btn-primary btn-lg" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>@(isEditMode ? "Updating..." : "Saving...")</span>
                            }
                            else
                            {
                                <span>@(isEditMode ? "Update Entry" : "Save Entry")</span>
                            }
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int? EntryId { get; set; }

    private User currentUser;
    private Entry entry = new Entry();
    private DateTime selectedDate = DateTime.Now;
    private bool isDarkMode = false;
    private bool isEditMode = false;
    private bool isSaving = false;
    private string successMessage = "";
    private string errorMessage = "";
    private int wordCount = 0;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Get current user from session (you might want to use a service for this)
            var users = await UserService.GetAllUsersAsync();
            currentUser = users.FirstOrDefault();

            if (currentUser == null)
            {
                Navigation.NavigateTo("/login");
                return;
            }

            isDarkMode = currentUser.IsDarkMode;

            if (EntryId.HasValue && EntryId > 0)
            {
                isEditMode = true;
                entry = await EntryService.GetEntryByIdAsync(EntryId.Value);
                if (entry != null)
                {
                    selectedDate = entry.EntryDate;
                    wordCount = entry.WordCount;
                }
            }
            else
            {
                entry = new Entry { UserId = currentUser.UserId, EntryDate = selectedDate };
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading page: {ex.Message}";
        }
    }

    private async Task SaveEntry()
    {
        isSaving = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            if (string.IsNullOrWhiteSpace(entry.Title) || string.IsNullOrWhiteSpace(entry.Content))
            {
                errorMessage = "Title and Content are required!";
                isSaving = false;
                return;
            }

            entry.EntryDate = selectedDate.Date;
            entry.WordCount = entry.Content.Split(new[] { ' ', '\n', '\r', '\t' }, StringSplitOptions.RemoveEmptyEntries).Length;
            entry.UserId = currentUser.UserId;

            if (isEditMode && entry.EntryId > 0)
            {
                await EntryService.UpdateEntryAsync(entry);
                successMessage = "Entry updated successfully!";
            }
            else
            {
                await EntryService.CreateEntryAsync(entry);
                successMessage = "Entry saved successfully!";
                isEditMode = true;
            }

            await Task.Delay(1500);
            Navigation.NavigateTo("/entries");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving entry: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteEntry()
    {
        if (entry.EntryId > 0)
        {
            bool confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this entry?");
            if (confirmed)
            {
                try
                {
                    await EntryService.DeleteEntryAsync(entry.EntryId);
                    successMessage = "Entry deleted successfully!";
                    await Task.Delay(1000);
                    Navigation.NavigateTo("/entries");
                }
                catch (Exception ex)
                {
                    errorMessage = $"Error deleting entry: {ex.Message}";
                }
            }
        }
    }

    private void ResetForm()
    {
        if (!isEditMode)
        {
            entry = new Entry { UserId = currentUser.UserId, EntryDate = selectedDate };
        }
    }

    private void PreviousDay()
    {
        selectedDate = selectedDate.AddDays(-1);
        OnDateChanged();
    }

    private void NextDay()
    {
        selectedDate = selectedDate.AddDays(1);
        OnDateChanged();
    }

    private void OnDateChanged()
    {
        entry.EntryDate = selectedDate.Date;
    }

    private async Task ToggleTheme()
    {
        isDarkMode = !isDarkMode;
        currentUser.IsDarkMode = isDarkMode;
        await UserService.UpdateUserAsync(currentUser);
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/entries");
    }

    protected override void OnParametersSet()
    {
        if (entry.Content != null)
        {
            wordCount = entry.Content.Split(new[] { ' ', '\n', '\r', '\t' }, StringSplitOptions.RemoveEmptyEntries).Length;
        }
    }
}
