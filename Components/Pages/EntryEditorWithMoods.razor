@code {
    [Parameter]
    public int? EntryId { get; set; }

    private User currentUser;
    private Entry entry = new Entry();
    private DateTime selectedDate = DateTime.Now;
    private bool isDarkMode = false;
    private bool isEditMode = false;
    private bool isSaving = false;
    private bool showPreview = false;
    private string successMessage;
    private string errorMessage;
    private int wordCount = 0;

    // Moods and Tags
    private List<Mood> moods = new();
    private List<Mood> selectedMoods = new();
    private int? primaryMoodId = null;
    private List<Tag> defaultTags = new();
    private List<Tag> selectedTags = new();
    private List<Category> userCategories = new();
    private string newTagName = "";
    private string[] moodCategories = { "Positive", "Neutral", "Negative" };

    private void ClearSuccessMessage() => successMessage = null;
    private void ClearErrorMessage() => errorMessage = null;

    private string GetCategoryClass(string category) => category switch
    {
        "Positive" => "text-success",
        "Neutral" => "text-warning",
        "Negative" => "text-danger",
        _ => "text-secondary"
    };

    private string GetMoodButtonClass(Mood mood)
    {
        if (selectedMoods.Any(sm => sm.MoodId == mood.MoodId))
        {
            return mood.Category switch
            {
                "Positive" => "btn-success",
                "Neutral" => "btn-warning",
                "Negative" => "btn-danger",
                _ => "btn-secondary"
            };
        }
        return "btn-outline-secondary";
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var users = await UserService.GetAllUsersAsync();
            currentUser = users?.FirstOrDefault();

            if (currentUser == null)
            {
                Navigation.NavigateTo("/login");
                return;
            }

            isDarkMode = currentUser.IsDarkMode;
            await JS.InvokeVoidAsync("applyTheme", isDarkMode);

            moods = await MoodService.GetAllMoodsAsync() ?? new List<Mood>();
            defaultTags = await TagService.GetDefaultTagsAsync() ?? new List<Tag>();
            userCategories = await CategoryService.GetAllCategoriesAsync(currentUser.UserId) ?? new List<Category>();

            if (EntryId.HasValue && EntryId > 0)
            {
                isEditMode = true;
                entry = await EntryService.GetEntryByIdAsync(EntryId.Value);
                if (entry != null)
                {
                    selectedDate = entry.EntryDate;
                    wordCount = entry.WordCount;

                    var entryMoods = await MoodService.GetMoodsForEntryAsync(entry.EntryId);
                    selectedMoods = entryMoods ?? new List<Mood>();
                    primaryMoodId = selectedMoods.FirstOrDefault()?.MoodId;

                    selectedTags = await TagService.GetTagsForEntryAsync(entry.EntryId) ?? new List<Tag>();
                }
                else
                {
                    entry = new Entry { UserId = currentUser.UserId, EntryDate = selectedDate };
                    isEditMode = false;
                }
            }
            else
            {
                entry = new Entry { UserId = currentUser.UserId, EntryDate = selectedDate };
            }
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error in OnInitializedAsync: {ex.Message}");
            errorMessage = $"Error loading page: {ex.Message}";
        }
    }

    private void TogglePreview()
    {
        showPreview = !showPreview;
    }

    private async Task ApplyFormat(string formatType)
    {
        try
        {
            // Get selection from JavaScript
            var selection = await JS.InvokeAsync<TextSelection>("getTextSelection", "contentTextarea");
            
            if (selection == null)
            {
                // No selection, insert at end or show hint
                InsertFormatAtEnd(formatType);
                return;
            }

            var content = entry.Content ?? "";
            var selectedText = selection.Text ?? "";
            var start = selection.Start;
            var end = selection.End;

            string formattedText = formatType switch
            {
                "bold" => $"**{(string.IsNullOrEmpty(selectedText) ? "bold text" : selectedText)}**",
                "italic" => $"*{(string.IsNullOrEmpty(selectedText) ? "italic text" : selectedText)}*",
                "heading" => $"\n## {(string.IsNullOrEmpty(selectedText) ? "Heading" : selectedText)}\n",
                "bullet" => $"\n- {(string.IsNullOrEmpty(selectedText) ? "List item" : selectedText)}",
                "number" => $"\n1. {(string.IsNullOrEmpty(selectedText) ? "List item" : selectedText)}",
                "quote" => $"\n> {(string.IsNullOrEmpty(selectedText) ? "Quote text" : selectedText)}\n",
                "link" => $"[{(string.IsNullOrEmpty(selectedText) ? "link text" : selectedText)}](url)",
                _ => selectedText
            };

            // Replace selected text with formatted text
            if (start >= 0 && end >= start && end <= content.Length)
            {
                entry.Content = content.Substring(0, start) + formattedText + content.Substring(end);
            }
            else
            {
                entry.Content = content + formattedText;
            }

            UpdateWordCount();
            StateHasChanged();
        }
        catch
        {
            // Fallback: insert at end
            InsertFormatAtEnd(formatType);
        }
    }

    private void InsertFormatAtEnd(string formatType)
    {
        var content = entry.Content ?? "";
        
        string formattedText = formatType switch
        {
            "bold" => "**bold text**",
            "italic" => "*italic text*",
            "heading" => "\n## Heading\n",
            "bullet" => "\n- List item",
            "number" => "\n1. List item",
            "quote" => "\n> Quote text\n",
            "link" => "[link text](url)",
            _ => ""
        };

        entry.Content = content + formattedText;
        UpdateWordCount();
    }

    private void HandleTextSelect()
    {
        // This is triggered when text is selected
        // The actual selection is retrieved via JS when applying format
    }

    private string RenderMarkdownToHtml(string content)
    {
        if (string.IsNullOrEmpty(content)) 
            return "<p class='text-muted'>Your formatted text will appear here...</p>";

        var html = content;

        // Escape HTML first
        html = System.Net.WebUtility.HtmlEncode(html);

        // Headings: ## text
        html = System.Text.RegularExpressions.Regex.Replace(html, @"^### (.+)$", "<h3>$1</h3>", System.Text.RegularExpressions.RegexOptions.Multiline);
        html = System.Text.RegularExpressions.Regex.Replace(html, @"^## (.+)$", "<h2>$1</h2>", System.Text.RegularExpressions.RegexOptions.Multiline);
        html = System.Text.RegularExpressions.Regex.Replace(html, @"^# (.+)$", "<h1>$1</h1>", System.Text.RegularExpressions.RegexOptions.Multiline);

        // Bold: **text**
        html = System.Text.RegularExpressions.Regex.Replace(html, @"\*\*(.+?)\*\*", "<strong>$1</strong>");
        
        // Italic: *text*
        html = System.Text.RegularExpressions.Regex.Replace(html, @"(?<![*])\*([^*]+)\*(?![*])", "<em>$1</em>");

        // Links: [text](url)
        html = System.Text.RegularExpressions.Regex.Replace(html, @"\[(.+?)\]\((.+?)\)", "<a href=\"$2\" target=\"_blank\">$1</a>");

        // Blockquotes: > text
        html = System.Text.RegularExpressions.Regex.Replace(html, @"^&gt; (.+)$", "<blockquote>$1</blockquote>", System.Text.RegularExpressions.RegexOptions.Multiline);

        // Unordered lists: - item
        html = System.Text.RegularExpressions.Regex.Replace(html, @"^- (.+)$", "<li>$1</li>", System.Text.RegularExpressions.RegexOptions.Multiline);
        
        // Ordered lists: 1. item
        html = System.Text.RegularExpressions.Regex.Replace(html, @"^\d+\. (.+)$", "<li>$1</li>", System.Text.RegularExpressions.RegexOptions.Multiline);

        // Wrap consecutive <li> in <ul>
        html = System.Text.RegularExpressions.Regex.Replace(html, @"((?:<li>.+?</li>\s*)+)", "<ul>$1</ul>");

        // Paragraphs: convert double newlines
        html = System.Text.RegularExpressions.Regex.Replace(html, @"\n\n", "</p><p>");
        
        // Single newlines to <br>
        html = html.Replace("\n", "<br>");

        // Wrap in paragraph
        html = "<p>" + html + "</p>";

        // Clean up empty paragraphs
        html = html.Replace("<p></p>", "").Replace("<p><br></p>", "");

        return html;
    }

    private void UpdateWordCount()
    {
        if (!string.IsNullOrEmpty(entry.Content))
        {
            wordCount = entry.Content.Split(new[] { ' ', '\n', '\r', '\t' }, StringSplitOptions.RemoveEmptyEntries).Length;
        }
        else
        {
            wordCount = 0;
        }
    }

    private async Task SaveEntry()
    {
        isSaving = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            if (string.IsNullOrWhiteSpace(entry.Title) || string.IsNullOrWhiteSpace(entry.Content))
            {
                errorMessage = "Title and Content are required!";
                isSaving = false;
                return;
            }

            if (!selectedMoods.Any())
            {
                errorMessage = "Please select at least one mood!";
                isSaving = false;
                return;
            }

            entry.EntryDate = selectedDate.Date;
            entry.WordCount = entry.Content.Split(new[] { ' ', '\n', '\r', '\t' }, StringSplitOptions.RemoveEmptyEntries).Length;
            entry.UserId = currentUser.UserId;

            if (isEditMode && entry.EntryId > 0)
            {
                await EntryService.UpdateEntryAsync(entry);
                successMessage = "Entry updated successfully!";
            }
            else
            {
                var result = await EntryService.CreateEntryAsync(entry);
                if (result > 0) entry.EntryId = result;
                successMessage = "Entry saved successfully!";
                isEditMode = true;
            }

            await SaveMoodsForEntry();
            await SaveTagsForEntry();

            await Task.Delay(1500);
            Navigation.NavigateTo("/entries");
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error saving entry: {ex.Message}");
            errorMessage = $"Error saving entry: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task SaveMoodsForEntry()
    {
        var existingMoods = await MoodService.GetMoodsForEntryAsync(entry.EntryId);
        if (existingMoods != null)
        {
            foreach (var mood in existingMoods)
            {
                await MoodService.RemoveMoodFromEntryAsync(entry.EntryId, mood.MoodId);
            }
        }

        bool isFirst = true;
        foreach (var mood in selectedMoods)
        {
            await MoodService.AddMoodToEntryAsync(entry.EntryId, mood.MoodId, isFirst);
            isFirst = false;
        }

        if (primaryMoodId.HasValue)
        {
            await MoodService.SetPrimaryMoodForEntryAsync(entry.EntryId, primaryMoodId.Value);
        }
    }

    private async Task SaveTagsForEntry()
    {
        var existingTags = await TagService.GetTagsForEntryAsync(entry.EntryId);
        if (existingTags != null)
        {
            foreach (var tag in existingTags)
            {
                await TagService.RemoveTagFromEntryAsync(entry.EntryId, tag.TagId);
            }
        }

        foreach (var tag in selectedTags)
        {
            await TagService.AddTagToEntryAsync(entry.EntryId, tag.TagId);
        }
    }

    private void ToggleMood(Mood mood)
    {
        if (selectedMoods.Any(m => m.MoodId == mood.MoodId))
        {
            selectedMoods.RemoveAll(m => m.MoodId == mood.MoodId);
            if (primaryMoodId == mood.MoodId)
            {
                primaryMoodId = selectedMoods.FirstOrDefault()?.MoodId;
            }
        }
        else
        {
            selectedMoods.Add(mood);
            if (!primaryMoodId.HasValue)
            {
                primaryMoodId = mood.MoodId;
            }
        }
    }

    private void ClearMoods()
    {
        selectedMoods.Clear();
        primaryMoodId = null;
    }

    private void ToggleTag(Tag tag)
    {
        if (selectedTags.Any(t => t.TagId == tag.TagId))
        {
            selectedTags.RemoveAll(t => t.TagId == tag.TagId);
        }
        else
        {
            selectedTags.Add(tag);
        }
    }

    private async Task AddCustomTag()
    {
        if (!string.IsNullOrWhiteSpace(newTagName))
        {
            var tag = new Tag
            {
                Name = newTagName.Trim(),
                UserId = currentUser.UserId,
                IsDefault = false,
                Color = GetRandomColor()
            };

            var tagId = await TagService.CreateTagAsync(tag);
            tag.TagId = tagId;
            selectedTags.Add(tag);
            newTagName = "";
        }
    }

    private void RemoveTag(Tag tag)
    {
        selectedTags.RemoveAll(t => t.TagId == tag.TagId);
    }

    private string GetRandomColor()
    {
        var colors = new[] { "#7c3aed", "#8b5cf6", "#a78bfa", "#ec4899", "#3b82f6", "#10b981", "#f59e0b" };
        return colors[new Random().Next(colors.Length)];
    }

    private async Task DeleteEntry()
    {
        if (entry.EntryId > 0)
        {
            bool confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this entry?");
            if (confirmed)
            {
                try
                {
                    await EntryService.DeleteEntryAsync(entry.EntryId);
                    successMessage = "Entry deleted successfully!";
                    await Task.Delay(1000);
                    Navigation.NavigateTo("/entries");
                }
                catch (Exception ex)
                {
                    errorMessage = $"Error deleting entry: {ex.Message}";
                }
            }
        }
    }

    private void ResetForm()
    {
        if (!isEditMode)
        {
            entry = new Entry { UserId = currentUser.UserId, EntryDate = selectedDate };
            selectedMoods.Clear();
            selectedTags.Clear();
            primaryMoodId = null;
            wordCount = 0;
        }
    }

    private async Task ToggleTheme()
    {
        isDarkMode = !isDarkMode;
        currentUser.IsDarkMode = isDarkMode;
        await UserService.UpdateUserAsync(currentUser);
        await JS.InvokeVoidAsync("applyTheme", isDarkMode);
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/entries");
    }

