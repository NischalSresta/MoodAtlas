@page "/entry-editor/{EntryId:int?}"
@using MoodAtlas.Services
@using MoodAtlas.Models
@inject EntryService EntryService
@inject MoodService MoodService
@inject TagService TagService
@inject CategoryService CategoryService
@inject UserService UserService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<div class="min-vh-100">
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background: linear-gradient(135deg, #7c3aed 0%, #a78bfa 100%);">
        <div class="container-fluid">
            <span class="navbar-brand fw-bold">MoodAtlas</span>
            <div class="ms-auto d-flex align-items-center gap-3">
                <span class="text-white">Welcome, <strong>@currentUser?.Username</strong></span>
                <button class="btn btn-outline-light btn-sm" @onclick="GoBack">Back to Entries</button>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="card border-0 shadow">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-0">@(isEditMode ? "Edit Entry" : "New Entry")</h4>
                    <small>@selectedDate.ToString("dddd, MMMM dd, yyyy")</small>
                </div>
                <div class="d-flex gap-2 align-items-center">
                    <input type="date" class="form-control form-control-sm" style="width: 150px;"
                           @bind="selectedDate" />
                    <button class="btn btn-outline-light btn-sm" @onclick="ToggleTheme">
                        @(isDarkMode ? "Light" : "Dark")
                    </button>
                </div>
            </div>

            <div class="card-body">
                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @successMessage
                        <button type="button" class="btn-close" @onclick="ClearSuccessMessage"></button>
                    </div>
                }

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @errorMessage
                        <button type="button" class="btn-close" @onclick="ClearErrorMessage"></button>
                    </div>
                }

                <form @onsubmit="SaveEntry">
                    <!-- Title -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Title <span class="text-danger">*</span></label>
                        <input type="text"
                               class="form-control form-control-lg"
                               @bind="entry.Title"
                               placeholder="What's on your mind today?"
                               required />
                    </div>

                    <!-- Mood Selection -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">How are you feeling? <span class="text-danger">*</span></label>
                        <div class="mood-selection">
                            @foreach (var category in moodCategories)
                            {
                                <div class="mb-3">
                                    <h6 class="@GetCategoryClass(category) fw-bold">
                                        @category
                                    </h6>
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var mood in moods.Where(m => m.Category == category))
                                        {
                                            <button type="button"
                                                    @onclick="() => ToggleMood(mood)"
                                                    class="btn @GetMoodButtonClass(mood)"
                                                    style="min-width: 110px;">
                                                @mood.Name
                                                @if (primaryMoodId == mood.MoodId)
                                                {
                                                    <span class="badge bg-dark ms-1">Primary</span>
                                                }
                                            </button>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        @if (selectedMoods.Any())
                        {
                            <div class="mt-2 p-2 bg-light rounded">
                                <small class="text-muted">
                                    <strong>Selected:</strong>
                                    @foreach (var mood in selectedMoods)
                                    {
                                        <span class="badge @(mood.MoodId == primaryMoodId ? "bg-dark" : "bg-secondary") me-1">
                                            @mood.Name @(mood.MoodId == primaryMoodId ? "(Primary)" : "")
                                        </span>
                                    }
                                </small>
                                <button type="button" class="btn btn-sm btn-outline-secondary ms-2" @onclick="ClearMoods">
                                    Clear
                                </button>
                            </div>
                        }
                    </div>

                    <!-- Content with Rich Text Toolbar -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Your Thoughts <span class="text-danger">*</span></label>
                        
                        <!-- Formatting Toolbar -->
                        <div class="formatting-toolbar mb-2">
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="@(() => ApplyFormat("bold"))" title="Bold">
                                    <strong>B</strong>
                                </button>
                                <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="@(() => ApplyFormat("italic"))" title="Italic">
                                    <em>I</em>
                                </button>
                                <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="@(() => ApplyFormat("heading"))" title="Heading">
                                    H
                                </button>
                            </div>
                            <div class="btn-group ms-2" role="group">
                                <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="@(() => ApplyFormat("bullet"))" title="Bullet List">
                                    * List
                                </button>
                                <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="@(() => ApplyFormat("number"))" title="Numbered List">
                                    1. List
                                </button>
                            </div>
                            <div class="btn-group ms-2" role="group">
                                <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="@(() => ApplyFormat("quote"))" title="Quote">
                                    Quote
                                </button>
                                <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="@(() => ApplyFormat("link"))" title="Link">
                                    Link
                                </button>
                            </div>
                            <button type="button" class="btn btn-outline-info btn-sm ms-2" @onclick="TogglePreview">
                                @(showPreview ? "Edit" : "Preview")
                            </button>
                        </div>

                        @if (showPreview)
                        {
                            <!-- Preview Mode -->
                            <div class="form-control preview-content" style="min-height: 250px; overflow-y: auto;">
                                @((MarkupString)RenderMarkdownToHtml(entry.Content ?? ""))
                            </div>
                        }
                        else
                        {
                            <!-- Edit Mode -->
                            <textarea id="contentTextarea" 
                                      class="form-control"
                                      rows="10"
                                      @bind="entry.Content"
                                      @bind:event="oninput"
                                      @onselect="HandleTextSelect"
                                      placeholder="Write about your day, thoughts, feelings..."
                                      required
                                      style="resize: vertical; font-family: 'Segoe UI', system-ui, sans-serif;"></textarea>
                        }
                        
                        <div class="d-flex justify-content-between mt-2">
                            <small class="text-muted">Word count: <strong>@wordCount</strong></small>
                            <small class="text-muted">Click toolbar buttons to format selected text</small>
                        </div>
                    </div>

                    <!-- Tags -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Tags (Optional)</label>
                        <div class="tag-selection">
                            <div class="input-group mb-3">
                                <input type="text"
                                       class="form-control"
                                       @bind="newTagName"
                                       placeholder="Add custom tag..." />
                                <button type="button" class="btn btn-outline-primary" @onclick="AddCustomTag">Add</button>
                            </div>
                            <div class="d-flex flex-wrap gap-2 mb-3">
                                @foreach (var tag in defaultTags.Take(15))
                                {
                                    <button type="button"
                                            @onclick="() => ToggleTag(tag)"
                                            class="btn @(selectedTags.Any(st => st.TagId == tag.TagId) ? "btn-primary" : "btn-outline-secondary") btn-sm">
                                        @tag.Name
                                    </button>
                                }
                            </div>
                            @if (selectedTags.Any())
                            {
                                <div class="mt-2">
                                    <small class="text-muted">
                                        <strong>Selected tags:</strong>
                                        @foreach (var tag in selectedTags)
                                        {
                                            <span class="badge bg-primary me-1">
                                                @tag.Name
                                                <span style="cursor: pointer; margin-left: 4px;" @onclick="() => RemoveTag(tag)">x</span>
                                            </span>
                                        }
                                    </small>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Category -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Category (Optional)</label>
                        <select class="form-select" @bind="entry.CategoryId">
                            <option value="0">-- Select Category --</option>
                            @foreach (var category in userCategories)
                            {
                                <option value="@category.CategoryId">@category.Name</option>
                            }
                        </select>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex gap-2 justify-content-end mt-4 pt-3 border-top">
                        @if (isEditMode && entry.EntryId > 0)
                        {
                            <button type="button" class="btn btn-danger" @onclick="DeleteEntry">
                                Delete
                            </button>
                        }
                        <button type="button" class="btn btn-light" @onclick="ResetForm">
                            Clear All
                        </button>
                        <button type="submit" class="btn btn-primary btn-lg" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>@(isEditMode ? "Updating..." : "Saving...")</span>
                            }
                            else
                            {
                                <span>@(isEditMode ? "Update Entry" : "Save Entry")</span>
                            }
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

