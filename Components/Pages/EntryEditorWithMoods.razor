@page "/entry-editor/{EntryId:int?}"
@using MoodAtlas.Services
@using MoodAtlas.Models
@inject EntryService EntryService
@inject MoodService MoodService
@inject TagService TagService
@inject CategoryService CategoryService
@inject UserService UserService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<div class="min-vh-100">
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="container-fluid">
            <span class="navbar-brand fw-bold">MoodAtlas</span>
            <div class="ms-auto d-flex align-items-center gap-3">
                <span class="text-white">Welcome, <strong>@currentUser?.Username</strong></span>
                <button class="btn btn-outline-light btn-sm" @onclick="GoBack">Back to Entries</button>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="card border-0 shadow">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-0">@(isEditMode ? "Edit Entry" : "New Entry")</h4>
                    <small>@selectedDate.ToString("dddd, MMMM dd, yyyy")</small>
                </div>
                <div class="d-flex gap-2 align-items-center">
                    <input type="date" class="form-control form-control-sm" style="width: 150px;"
                           @bind="selectedDate" />
                    <button class="btn btn-outline-light btn-sm theme-toggle" @onclick="ToggleTheme" style="border: none; background: none;">
                        @if (isDarkMode)
                        {
                            <span style="font-size: 1.2rem;">☀️</span>
                        }
                        else
                        {
                            <span style="font-size: 1.2rem;">🌙</span>
                        }
                    </button>
                </div>
            </div>

            <div class="card-body">
                @if (successMessage != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @successMessage
                        <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
                    </div>
                }

                @if (errorMessage != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @errorMessage
                        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                    </div>
                }

                <form @onsubmit="SaveEntry">
                    <!-- Title -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Title *</label>
                        <input type="text"
                               class="form-control form-control-lg"
                               @bind="entry.Title"
                               placeholder="What's on your mind today?"
                               required />
                    </div>

                    <!-- Mood Selection -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">How are you feeling? *</label>
                        <div class="mood-selection">
                            @foreach (var category in moodCategories)
                            {
                                <div class="mb-3">
                                    <h6 class="@(category == "Positive" ? "text-success" : category == "Neutral" ? "text-warning" : "text-danger")">
                                        @category
                                    </h6>
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var mood in moods.Where(m => m.Category == category))
                                        {
                                            <button type="button"
                                                    @onclick="() => ToggleMood(mood)"
                                                    class="btn @(selectedMoods.Any(sm => sm.MoodId == mood.MoodId) ? (mood.Category == "Positive" ? "btn-success" : mood.Category == "Neutral" ? "btn-warning" : "btn-danger") : "btn-outline-secondary")"
                                                    style="min-width: 100px;">
                                                @mood.Emoji @mood.Name
                                                @if (primaryMoodId == mood.MoodId)
                                                {
                                                    <span class="badge bg-dark ms-1">Primary</span>
                                                }
                                            </button>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        @if (selectedMoods.Any())
                        {
                            <div class="mt-2">
                                <small class="text-muted">
                                    Selected:
                                    @foreach (var mood in selectedMoods)
                                    {
                                        <span class="badge @(mood.MoodId == primaryMoodId ? "bg-dark" : "bg-secondary") me-1">
                                            @mood.Emoji @mood.Name @(mood.MoodId == primaryMoodId ? "(Primary)" : "")
                                        </span>
                                    }
                                </small>
                                <button type="button" class="btn btn-sm btn-outline-secondary ms-2" @onclick="ClearMoods">
                                    Clear
                                </button>
                            </div>
                        }
                    </div>

                    <!-- Content -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Your Thoughts *</label>
                        <textarea class="form-control"
                                  rows="10"
                                  @bind="entry.Content"
                                  placeholder="Write about your day, thoughts, feelings..."
                                  required
                                  style="resize: vertical;"></textarea>
                        <small class="text-muted d-block mt-1">Word count: @wordCount</small>
                    </div>

                    <!-- Tags -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Tags (Optional)</label>
                        <div class="tag-selection">
                            <div class="input-group mb-3">
                                <input type="text"
                                       class="form-control"
                                       @bind="newTagName"
                                       placeholder="Add custom tag..."
                                       @onkeyup="@(async (e) => { if (e.Key == "Enter") await AddCustomTag(); })" />
                                <button type="button" class="btn btn-outline-primary" @onclick="AddCustomTag">Add</button>
                            </div>
                            <div class="d-flex flex-wrap gap-2 mb-3">
                                @foreach (var tag in defaultTags.Take(15))
                                {
                                    <button type="button"
                                            @onclick="() => ToggleTag(tag)"
                                            class="btn @(selectedTags.Any(st => st.TagId == tag.TagId) ? "btn-primary" : "btn-outline-secondary") btn-sm">
                                        @tag.Name
                                    </button>
                                }
                            </div>
                            @if (selectedTags.Any())
                            {
                                <div class="mt-2">
                                    <small class="text-muted">
                                        Selected tags:
                                        @foreach (var tag in selectedTags)
                                        {
                                            <span class="badge bg-primary me-1">
                                                @tag.Name
                                                <button type="button"
                                                        @onclick="() => RemoveTag(tag)"
                                                        class="btn-close btn-close-white"
                                                        style="font-size: 0.5rem; margin-left: 4px;"></button>
                                            </span>
                                        }
                                    </small>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Category -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Category (Optional)</label>
                        <select class="form-select" @bind="entry.CategoryId">
                            <option value="0">-- Select Category --</option>
                            @foreach (var category in userCategories)
                            {
                                <option value="@category.CategoryId">@category.Icon @category.Name</option>
                            }
                        </select>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex gap-2 justify-content-end">
                        @if (isEditMode && entry.EntryId > 0)
                        {
                            <button type="button" class="btn btn-danger" @onclick="DeleteEntry">
                                <span class="bi bi-trash"></span> Delete
                            </button>
                        }
                        <button type="button" class="btn btn-light" @onclick="ResetForm">
                            <span class="bi bi-arrow-clockwise"></span> Clear All
                        </button>
                        <button type="submit" class="btn btn-primary btn-lg" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>@(isEditMode ? "Updating..." : "Saving...")</span>
                            }
                            else
                            {
                                <span>@(isEditMode ? "Update Entry" : "Save Entry")</span>
                            }
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .mood-selection .btn {
        transition: all 0.2s;
    }

        .mood-selection .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .tag-selection .btn-sm {
        border-radius: 20px;
        padding: 4px 12px;
    }

    .badge {
        font-size: 0.8rem;
        padding: 4px 8px;
    }
</style>

@code {
    [Parameter]
    public int? EntryId { get; set; }

    private User currentUser;
    private Entry entry = new Entry();
    private DateTime selectedDate = DateTime.Now;
    private bool isDarkMode = false;
    private bool isEditMode = false;
    private bool isSaving = false;
    private string successMessage = "";
    private string errorMessage = "";
    private int wordCount = 0;

    // Moods & Tags
    private List<Mood> moods = new();
    private List<Mood> selectedMoods = new();
    private int? primaryMoodId = null;
    private List<Tag> defaultTags = new();
    private List<Tag> selectedTags = new();
    private List<Category> userCategories = new();
    private string newTagName = "";
    private string[] moodCategories = { "Positive", "Neutral", "Negative" };

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Get current user
            var users = await UserService.GetAllUsersAsync();
            currentUser = users.FirstOrDefault();

            if (currentUser == null)
            {
                Navigation.NavigateTo("/login");
                return;
            }

            isDarkMode = currentUser.IsDarkMode;
            await JS.InvokeVoidAsync("applyTheme", isDarkMode);

            // Load data
            moods = await MoodService.GetAllMoodsAsync();
            defaultTags = await TagService.GetDefaultTagsAsync();
            userCategories = await CategoryService.GetAllCategoriesAsync(currentUser.UserId);

            if (EntryId.HasValue && EntryId > 0)
            {
                isEditMode = true;
                entry = await EntryService.GetEntryByIdAsync(EntryId.Value);
                if (entry != null)
                {
                    selectedDate = entry.EntryDate;
                    wordCount = entry.WordCount;

                    // Load existing moods
                    var entryMoods = await MoodService.GetMoodsForEntryAsync(entry.EntryId);
                    selectedMoods = entryMoods;
                    primaryMoodId = entryMoods.FirstOrDefault()?.MoodId;

                    // Load existing tags
                    selectedTags = await TagService.GetTagsForEntryAsync(entry.EntryId);
                }
            }
            else
            {
                entry = new Entry { UserId = currentUser.UserId, EntryDate = selectedDate };
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading page: {ex.Message}";
        }
    }

    private async Task SaveEntry()
    {
        isSaving = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            // Validation
            if (string.IsNullOrWhiteSpace(entry.Title) || string.IsNullOrWhiteSpace(entry.Content))
            {
                errorMessage = "Title and Content are required!";
                isSaving = false;
                return;
            }

            if (!selectedMoods.Any())
            {
                errorMessage = "Please select at least one mood!";
                isSaving = false;
                return;
            }

            // Update entry details
            entry.EntryDate = selectedDate.Date;
            entry.WordCount = entry.Content.Split(new[] { ' ', '\n', '\r', '\t' }, StringSplitOptions.RemoveEmptyEntries).Length;
            entry.UserId = currentUser.UserId;

            // Save entry
            if (isEditMode && entry.EntryId > 0)
            {
                await EntryService.UpdateEntryAsync(entry);
                successMessage = "Entry updated successfully!";
            }
            else
            {
                var result = await EntryService.CreateEntryAsync(entry);
                if (result > 0) entry.EntryId = result;
                successMessage = "Entry saved successfully!";
                isEditMode = true;
            }

            // Save moods
            await SaveMoodsForEntry();

            // Save tags
            await SaveTagsForEntry();

            await Task.Delay(1500);
            Navigation.NavigateTo("/entries");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving entry: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task SaveMoodsForEntry()
    {
        // Clear existing moods
        foreach (var mood in selectedMoods)
        {
            await MoodService.RemoveMoodFromEntryAsync(entry.EntryId, mood.MoodId);
        }

        // Add selected moods
        bool isFirst = true;
        foreach (var mood in selectedMoods)
        {
            await MoodService.AddMoodToEntryAsync(entry.EntryId, mood.MoodId, isFirst);
            isFirst = false;
        }

        // Set primary mood if specified
        if (primaryMoodId.HasValue)
        {
            await MoodService.SetPrimaryMoodForEntryAsync(entry.EntryId, primaryMoodId.Value);
        }
    }

    private async Task SaveTagsForEntry()
    {
        // Clear existing tags
        foreach (var tag in selectedTags)
        {
            await TagService.RemoveTagFromEntryAsync(entry.EntryId, tag.TagId);
        }

        // Add selected tags
        foreach (var tag in selectedTags)
        {
            await TagService.AddTagToEntryAsync(entry.EntryId, tag.TagId);
        }
    }

    private void ToggleMood(Mood mood)
    {
        if (selectedMoods.Any(m => m.MoodId == mood.MoodId))
        {
            selectedMoods.RemoveAll(m => m.MoodId == mood.MoodId);
            if (primaryMoodId == mood.MoodId)
            {
                primaryMoodId = selectedMoods.FirstOrDefault()?.MoodId;
            }
        }
        else
        {
            selectedMoods.Add(mood);
            if (!primaryMoodId.HasValue)
            {
                primaryMoodId = mood.MoodId;
            }
        }
    }

    private void ClearMoods()
    {
        selectedMoods.Clear();
        primaryMoodId = null;
    }

    private void ToggleTag(Tag tag)
    {
        if (selectedTags.Any(t => t.TagId == tag.TagId))
        {
            selectedTags.RemoveAll(t => t.TagId == tag.TagId);
        }
        else
        {
            selectedTags.Add(tag);
        }
    }

    private async Task AddCustomTag()
    {
        if (!string.IsNullOrWhiteSpace(newTagName))
        {
            var tag = new Tag
            {
                Name = newTagName.Trim(),
                UserId = currentUser.UserId,
                IsDefault = false,
                Color = GetRandomColor()
            };

            var tagId = await TagService.CreateTagAsync(tag);
            tag.TagId = tagId;
            selectedTags.Add(tag);
            newTagName = "";
        }
    }

    private void RemoveTag(Tag tag)
    {
        selectedTags.RemoveAll(t => t.TagId == tag.TagId);
    }

    private string GetRandomColor()
    {
        var colors = new[] { "#667eea", "#764ba2", "#f093fb", "#4facfe", "#00f2fe", "#43e97b", "#fa709a", "#fee140" };
        return colors[new Random().Next(colors.Length)];
    }

    private async Task DeleteEntry()
    {
        if (entry.EntryId > 0)
        {
            bool confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this entry?");
            if (confirmed)
            {
                try
                {
                    await EntryService.DeleteEntryAsync(entry.EntryId);
                    successMessage = "Entry deleted successfully!";
                    await Task.Delay(1000);
                    Navigation.NavigateTo("/entries");
                }
                catch (Exception ex)
                {
                    errorMessage = $"Error deleting entry: {ex.Message}";
                }
            }
        }
    }

    private void ResetForm()
    {
        if (!isEditMode)
        {
            entry = new Entry { UserId = currentUser.UserId, EntryDate = selectedDate };
            selectedMoods.Clear();
            selectedTags.Clear();
            primaryMoodId = null;
            wordCount = 0;
        }
    }

    private async Task ToggleTheme()
    {
        isDarkMode = !isDarkMode;
        currentUser.IsDarkMode = isDarkMode;
        await UserService.UpdateUserAsync(currentUser);
        await JS.InvokeVoidAsync("applyTheme", isDarkMode);
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/entries");
    }

    protected override void OnParametersSet()
    {
        if (entry.Content != null)
        {
            wordCount = entry.Content.Split(new[] { ' ', '\n', '\r', '\t' }, StringSplitOptions.RemoveEmptyEntries).Length;
        }
    }
}