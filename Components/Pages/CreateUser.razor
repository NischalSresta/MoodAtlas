@code {
    private User newUser = new User();
    private string successMessage;
    private string errorMessage;
    private bool isSubmitting = false;

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            if (string.IsNullOrWhiteSpace(newUser.Username))
            {
                errorMessage = "Username is required!";
                isSubmitting = false;
                return;
            }

            if (newUser.Username.Length < 3)
            {
                errorMessage = "Username must be at least 3 characters!";
                isSubmitting = false;
                return;
            }

            if (string.IsNullOrWhiteSpace(newUser.SecurityPIN))
            {
                errorMessage = "Security PIN is required!";
                isSubmitting = false;
                return;
            }

            if (newUser.SecurityPIN.Length < 4 || newUser.SecurityPIN.Length > 10)
            {
                errorMessage = "PIN must be 4-10 characters!";
                isSubmitting = false;
                return;
            }

            int userId = await UserService.CreateUserAsync(newUser);
            successMessage = "Account created successfully! Redirecting...";
            
            await Task.Delay(1500);
            Navigation.NavigateTo("/login");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
