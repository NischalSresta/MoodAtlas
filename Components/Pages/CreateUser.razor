@page "/create-user"
@using MoodAtlas.Services
@using MoodAtlas.Models
@inject UserService UserService
@inject NavigationManager Navigation

<div class="signup-page">
    <div class="bg-animation">
        <div class="bg-orb orb-1"></div>
        <div class="bg-orb orb-2"></div>
        <div class="bg-orb orb-3"></div>
    </div>

    <div class="signup-container">
        <div class="signup-card">
            <div class="signup-header">
                <a href="/login" class="back-link">‚Üê Back to Login</a>
                <div class="logo-icon">
                    <span>‚ú®</span>
                </div>
                <h1 class="app-title">Join MoodAtlas</h1>
                <p class="app-subtitle">Start your mindfulness journey today</p>
            </div>

            <div class="signup-body">
                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success">
                        @successMessage
                    </div>
                }

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger">
                        @errorMessage
                        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                    </div>
                }

                <form @onsubmit="HandleSubmit">
                    <div class="form-group">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" 
                               class="form-control form-control-lg premium-input" 
                               id="username" 
                               @bind="newUser.Username" 
                               placeholder="Choose a unique username"
                               required />
                        <small class="input-hint">At least 3 characters</small>
                    </div>

                    <div class="form-group">
                        <label for="securityPin" class="form-label">Security PIN</label>
                        <input type="password" 
                               class="form-control form-control-lg premium-input" 
                               id="securityPin" 
                               @bind="newUser.SecurityPIN" 
                               placeholder="Create a secure PIN"
                               maxlength="10"
                               required />
                        <small class="input-hint">4-10 characters for security</small>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Theme Preference</label>
                        <div class="theme-selector">
                            <label class="theme-option @(newUser.IsDarkMode == false ? "active" : "")">
                                <input type="radio" name="theme" checked="@(!newUser.IsDarkMode)"
                                       @onchange="@(() => newUser.IsDarkMode = false)" />
                                <span class="theme-icon">‚òÄÔ∏è</span>
                                <span class="theme-label">Light</span>
                            </label>
                            <label class="theme-option @(newUser.IsDarkMode == true ? "active" : "")">
                                <input type="radio" name="theme" checked="@(newUser.IsDarkMode)"
                                       @onchange="@(() => newUser.IsDarkMode = true)" />
                                <span class="theme-icon">üåô</span>
                                <span class="theme-label">Dark</span>
                            </label>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-signup" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <span>Creating Account...</span>
                        }
                        else
                        {
                            <span>Create My Account</span>
                        }
                    </button>
                </form>

                <div class="features">
                    <div class="feature-item">
                        <span class="feature-icon">üìù</span>
                        <span>Daily Journaling</span>
                    </div>
                    <div class="feature-item">
                        <span class="feature-icon">üìä</span>
                        <span>Mood Analytics</span>
                    </div>
                    <div class="feature-item">
                        <span class="feature-icon">üîí</span>
                        <span>Private & Secure</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

