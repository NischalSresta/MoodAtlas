@page "/login"
@using MoodAtlas.Services
@using MoodAtlas.Models
@inject UserService UserService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<div class="login-page">
    <div class="bg-animation">
        <div class="bg-orb orb-1"></div>
        <div class="bg-orb orb-2"></div>
        <div class="bg-orb orb-3"></div>
    </div>

    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="logo-icon">
                    <span class="logo-text">M</span>
                </div>
                <h1 class="app-title">MoodAtlas</h1>
                <p class="app-subtitle">Your Personal Mood Journal</p>
            </div>

            <div class="login-body">
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @errorMessage
                        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                    </div>
                }

                <form @onsubmit="HandleLogin">
                    <div class="form-group">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" 
                               class="form-control form-control-lg premium-input" 
                               id="username" 
                               @bind="loginUsername" 
                               placeholder="Enter your username"
                               required
                               autofocus />
                    </div>

                    <div class="form-group">
                        <label for="pin" class="form-label">Security PIN</label>
                        <input type="password" 
                               class="form-control form-control-lg premium-input" 
                               id="pin" 
                               @bind="loginPIN" 
                               placeholder="Enter your PIN"
                               required />
                    </div>

                    <button type="submit" class="btn btn-login" disabled="@isLoggingIn">
                        @if (isLoggingIn)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <span>Signing in...</span>
                        }
                        else
                        {
                            <span>Sign In</span>
                        }
                    </button>
                </form>

                <div class="divider">
                    <span>or</span>
                </div>

                <a href="/create-user" class="btn btn-create-account">
                    Create New Account
                </a>
            </div>

            <div class="login-footer">
                <p>Track your emotions, discover patterns, grow mindfully</p>
            </div>
        </div>
    </div>
</div>

