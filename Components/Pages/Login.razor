        display: block;
        transition: all 0.3s ease;
    }

    .btn-create-account:hover {
        background: rgba(255, 255, 255, 0.15);
        border-color: rgba(255, 255, 255, 0.3);
        color: white;
    }

    .login-footer {
        text-align: center;
        padding: 20px 40px 30px;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .login-footer p {
        color: rgba(255, 255, 255, 0.5);
        font-size: 0.85rem;
        margin: 0;
    }

    .login-body .alert {
        background: rgba(239, 68, 68, 0.15);
        border: 1px solid rgba(239, 68, 68, 0.3);
        border-radius: 12px;
        color: #fca5a5;
        padding: 14px 18px;
        margin-bottom: 24px;
    }

    .login-body .alert .btn-close {
        filter: invert(1);
        opacity: 0.7;
    }
</style>

@code {
    private string loginUsername = "";
    private string loginPIN = "";
    private string errorMessage;
    private bool isLoggingIn = false;

    protected override async Task OnInitializedAsync()
    {
        await JS.InvokeVoidAsync("applyTheme", false);
    }

    private async Task HandleLogin()
    {
        isLoggingIn = true;
        errorMessage = null;

        try
        {
            if (string.IsNullOrWhiteSpace(loginUsername) || string.IsNullOrWhiteSpace(loginPIN))
            {
                errorMessage = "Please enter both username and PIN";
                isLoggingIn = false;
                return;
            }

            var users = await UserService.GetAllUsersAsync();
            var user = users?.FirstOrDefault(u => 
                u.Username.Equals(loginUsername, StringComparison.OrdinalIgnoreCase) && 
                u.SecurityPIN == loginPIN);

            if (user == null)
            {
                errorMessage = "Invalid username or PIN. Please try again.";
                isLoggingIn = false;
                return;
            }

            await Task.Delay(500);
            Navigation.NavigateTo($"/dashboard-enhanced/{user.UserId}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Login error: {ex.Message}";
            isLoggingIn = false;
        }
    }
}
