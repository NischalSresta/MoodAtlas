        overflow: hidden;
        z-index: 0;
    }

    .bg-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.5;
    }

    .orb-1 {
        width: 400px;
        height: 400px;
        background: linear-gradient(135deg, #7c3aed 0%, #a78bfa 100%);
        top: -100px;
        right: -100px;
    }

    .orb-2 {
        width: 500px;
        height: 500px;
        background: linear-gradient(135deg, #ec4899 0%, #f472b6 100%);
        bottom: -150px;
        left: -150px;
    }

    .orb-3 {
        width: 300px;
        height: 300px;
        background: linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%);
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .login-container {
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 440px;
    }

    .login-card {
        background: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 24px;
        overflow: hidden;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
    }

    .login-header {
        text-align: center;
        padding: 40px 40px 30px;
        background: linear-gradient(180deg, rgba(124, 58, 237, 0.2) 0%, transparent 100%);
    }

    .logo-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #7c3aed 0%, #a78bfa 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 2.5rem;
        box-shadow: 0 10px 30px rgba(124, 58, 237, 0.4);
    }

    .logo-text {
        color: white;
        font-size: 2.5rem;
        font-weight: 800;
        margin: 0;
    }

    .app-title {
        color: white;
        font-size: 2.2rem;
        font-weight: 800;
